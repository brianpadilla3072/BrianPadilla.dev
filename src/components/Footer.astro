---
import cv from "public/cv.json"; // Ajusta la importación de acuerdo a la estructura de tu proyecto
import SectionContainer from "@/components/SectionContainer.astro"; // Asegúrate de que el camino es correcto
import LinkButton from "./LinkButton.jsx";
import ProfileCheck from "./icons/ProfileCheck.astro";

const currentYear = new Date().getFullYear();
