      <div class="space-y-4">
        <div class= "flex gap-1 justify-start items-center">  
          <ProfileCheck/>
          <h2 class="text-2xl font-bold text-primary">{cv.footer.name}</h2>
        </div>
        <p class="text-sm">
          {cv.footer.description}
        </p>
      </div>

