// En tu componente o archivo de script
import data from 'public/cv.json'; // Asegúrate de ajustar la ruta según tu estructura

const PROJECTS = data.PROJECTS
  .filter((project) => project.featured) // Filtra los proyectos destacados
  .map((project) => ({
    ...project,
    tags: project.tags.map((tag) => tag.replace("TAGS.", "")), // Mantén solo las claves
  }))
  .slice(0, 3); // Muestra solo los primeros tres
  const EXPERIENCE = data.EXPERIENCE
  .filter((job) => job.featured) // Filtra los proyectos destacados
  .slice(0, 3); 
