    <main id="pdf-content">
        <section id="header">
            <div style="display: flex; flex-direction: column; margin: auto;">
                <strong class="c16" id="name" style="font-size: x-large;">{data.aboutme.name}</strong>
                <p class="c16" id="role">{data.aboutme.role}</p>
            </div>
            <div style="display: flex; flex-direction: column;">
                <p class="c8" id="phone">{data.contact.phone}</p>
                <p class="c8" id="timezone">{data.contact.timezone}</p>
                <p class="c11" id="github"><a href="{data.contact.github}">{data.contact.github}</a></p>
                <p class="c11" id="email"><a href="mailto:{data.contact.email}">{data.contact.email}</a></p>
                <p class="c11" id="linkedin"><a href="{data.contact.linkedin}">{data.contact.linkedin}</a></p>
                <p class="c11" id="Porfolio"><a href="{data.contact.portfolio}">{data.contact.portfolio}</a></p>
            </div>
        </section>
        <p class="c32"><span class="c13">PERFIL</span></p>
        <p class="c39" id="profile">{data.aboutme.profile}</p>

        <p class="c3"><span class="c19 c13">PROYECTOS</span></p>
        <div id="projects">
            {data.PROJECTS.map(project => (
                <div>
                    <p class="c3">
                        <span class="c22"><a class="c2" href="{project.link}">{project.title}</a></span>
                        <span class="c5">| </span>
                        <span class="c19 c13"> - {project.role}</span>
                    </p>
                    <ul class="c23">
                        <li><span>{project.description}</span></li>
                        <li><span><strong>Tecnologías:</strong> {project.technologies}</span></li>
                    </ul>
                </div>
            ))}
        </div>

        <p class="c3"><span class="c13">Tecnologías</span></p>
        <p class="c39" id="technologies">{data.aboutme.technologies}</p>

        <p class="c3"><span class="c19 c13">EXPERIENCIA</span></p>
        <div id="experience">
            {data.EXPERIENCE.map(job => (
                <div>
                    <p class="c0"><span class="c4">{job.company} - {job.location} | {job.years}</span></p>
                    <li class="c0"><span>{job.description}</span></li>
                </div>
            ))}
        </div>

        <p class="c3"><span class="c13 c44">EDUCACIÓN</span></p>
        <p class="c0" id="education">{data.aboutme.education}</p>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <script>
        // Declarar html2pdf
        declare const html2pdf: any;

        // Función para generar y descargar el PDF
        const generatePDF = () => {
            const element = document.getElementById('pdf-content');
            html2pdf()
                .from(element)
                .save('BrianPadilla.pdf');
        };

        // Generar el PDF al cargar la página
        window.onload = () => {
            generatePDF();
        };
    </script>
</body>
</html>
